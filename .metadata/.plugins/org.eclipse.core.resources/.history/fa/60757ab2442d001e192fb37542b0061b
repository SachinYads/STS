    private List<String[]> readCSV(String filePath) throws CsvException {
      try (CSVReader reader = new CSVReader(new FileReader(filePath))) {
          return reader.readAll();
         } catch (IOException e) {
          e.printStackTrace();
       }
       return new ArrayList<>();		 
    }

}
