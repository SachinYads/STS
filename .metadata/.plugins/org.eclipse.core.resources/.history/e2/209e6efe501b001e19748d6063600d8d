	 @PostMapping("/polyline_data")
	    public List<List<List<Double>>> getPolylineData(@RequestBody OltIdRequest oltId) {
	        List<List<List<Double>>> latLong = new ArrayList<>();

	        try {
	            String inventoryDataPath = "D:/KPN_DEMO/BackEnd/Inventory_data_new.csv";
	            String oltDataPath = "D:/KPN_DEMO/BackEnd/OLT_data_new.csv";
	            String ontDataPath = "D:/KPN_DEMO/BackEnd/ONT_data_new.csv";

	            // Read inventory data
	            List<String> inventoryLines = Files.readAllLines(Paths.get(inventoryDataPath));
	            List<String> oltLines = Files.readAllLines(Paths.get(oltDataPath));
	            List<String> ontLines = Files.readAllLines(Paths.get(ontDataPath));

	            // Retrieve OLT latitude and longitude
	            String oltLatLongLine = "";
	            for (String oltLine : oltLines) {
	                if (oltLine.contains(oltId.getOLT())) {
	                    oltLatLongLine = oltLine;
	                    break;
	                }
	            }
	            System.out.println(oltLatLongLine);
	            String[] oltLatLongData = oltLatLongLine.split(",");
	            Double oltLatitude = Double.parseDouble(oltLatLongData[1]);
	            Double oltLongitude = Double.parseDouble(oltLatLongData[2]);

	            // Retrieve ONT latitude and longitude for each serial number
	            List<String> serialNumbers = new ArrayList<>();
	            for (String inventoryLine : inventoryLines) {
	                String[] inventoryData = inventoryLine.split(",");
	                if (inventoryData[0].equals(oltId.getOLT())) {
	                    serialNumbers.add(inventoryData[1]);
	                }
	            }

	            for (String ontLine : ontLines) {
	                String[] ontData = ontLine.split(",");
	                String ontSerialNumber = ontData[0];
	                Double ontLatitude = Double.parseDouble(ontData[1]);
	                Double ontLongitude = Double.parseDouble(ontData[2]);

	                if (serialNumbers.contains(ontSerialNumber)) {
	                    List<List<Double>> polylineCoordinates = new ArrayList<>();
	                    polylineCoordinates.add(List.of(oltLatitude, oltLongitude));
	                    polylineCoordinates.add(List.of(ontLatitude, ontLongitude));
	                    latLong.add(polylineCoordinates);
	                }
	            }
	        } catch (IOException e) {
	            e.printStackTrace();
	        }

	        return latLong;
	    }

	    static class OltIdRequest {
	        private String OLT;

	        public String getOLT() {
	            return OLT;
	        }

	        public void setOLT(String OLT) {
	            this.OLT = OLT;
	        }
	    }
	}

